{
  "kind": "collectionType",
  "collectionName": "job_postings",
  "info": {
    "singularName": "job-posting",
    "pluralName": "job-postings",
    "displayName": "Job Posting",
    "description": "Open positions at CPCL"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "department": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["Full-time", "Contract", "Internship"],
      "required": true
    },
    "openings": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "experience": {
      "type": "string"
    },
    "salary": {
      "type": "string"
    },
    "posted": {
      "type": "date"
    },
    "description": {
      "type": "text"
    },
    "requirements": {
      "type": "json"
    },
    "is_filled": {
      "type": "boolean",
      "default": false
    }
  }
}
