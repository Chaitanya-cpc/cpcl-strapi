{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": "CPCL infrastructure projects"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "sector": {
      "type": "string",
      "required": true
    },
    "project_status": {
      "type": "enumeration",
      "enum": ["Completed", "Ongoing", "Upcoming"],
      "required": true
    },
    "region": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "year": {
      "type": "integer"
    },
    "client": {
      "type": "string"
    },
    "value": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "highlights": {
      "type": "json"
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}
